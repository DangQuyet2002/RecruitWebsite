@using Microsoft.AspNetCore.Http.Features
@model ITrackingConsentFeature

@{
    var showCookieBanner = !Model?.CanTrack ?? false;
    var cookieString = Model?.CreateConsentCookie();
}

@if (showCookieBanner)
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cookieconsent/3.1.1/cookieconsent.min.js"
            integrity="sha512-yXXqOFjdjHNH1GND+1EO0jbvvebABpzGKD66djnUfiKlYME5HGMUJHoCaeE4D5PTG2YsSJf6dwqyUUvQvS0vaA=="
            crossorigin="anonymous">
    </script>
    <script src="~/js/cookieconsent.min.js"></script>
    <script>initializeCookieConsent('@SharedLocalizer["Ok, we use cookies, right? Don't worry, it is just to improve your experience here."]', '@SharedLocalizer["Learn more"]', 'https://www.ludustack.com/privacy/');</script>
}